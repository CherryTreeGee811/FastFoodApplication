@using ClientApplication.Messages
@model IEnumerable<EmployeeListDTO>
@{
    ViewData["Title"] = "Manage Employees";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Employees</h1>
        <a href="/employees/hire" class="btn btn-success">Hire New Employee</a>
    </div>

    <!-- Employee Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.JobTitle</td>
                        <td>@employee.StationName</td>
                        <td>
                            <a asp-controller="Employee" asp-action="Manage" asp-route-employeeid="employee.EmployeeId" class="btn btn-primary btn-sm">Manage</a>
                            <form method="post" asp-controller="Employee" asp-action="Fire" asp-route-employeeid="@employee.EmployeeId" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Fire</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <!-- Notify Staff Button -->
    <button class="btn btn-primary mt-3" onclick="notifySchedule()">Notify Staff of Schedule</button>
</div>

<script>
    function notifySchedule() {
        fetch('/employees/notify-schedule', { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                } else {
                    alert('Failed to notify staff.');
                }
            });
    }
</script>
