@{
    ViewData["Title"] = "Hire Employee";
}

<div class="container mt-5">
    <h1>Hire Employee</h1>

    <form method="post" action="/employees/hire">
        <div class="mb-3">
            <label for="firstName" class="form-label">First</label>
            <input type="text" class="form-control" id="firstName" name="firstName" required />
        </div>
        <div class="mb-3">
            <label for="lastName" class="form-label">Last</label>
            <input type="text" class="form-control" id="lastName" name="lastName" required />
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <input type="text" class="form-control" id="role" name="role" required />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required />
        </div>
        <button type="submit" class="btn btn-primary">Hire</button>
    </form>
</div>