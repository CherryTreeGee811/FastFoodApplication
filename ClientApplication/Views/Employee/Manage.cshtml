@{
    ViewData["Title"] = "Manage Employee";
    var employeeID = ViewBag.EmployeeID;
    var roles = ViewBag.Roles as List<string>;
    var positions = ViewBag.Positions as List<string>;
    var trainingModules = ViewBag.TrainingModules as List<string>;
}

<div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Employee</h1>
        <span>Employee ID @employeeID</span>
    </div>

    <div class="row">
        <!-- Promote/Demote Form -->
        <div class="col-md-6">
            <form method="post" action="/employees/@employeeID/promote-demote">
                <h3>Promote/Demote</h3>
                <div class="mb-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role" required>
                        @foreach (var role in roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>

            <!-- Relocate Form -->
            <form method="post" action="/employees/@employeeID/relocate" class="mt-4">
                <h3>Relocate</h3>
                <div class="mb-3">
                    <label for="position" class="form-label">Position</label>
                    <select class="form-select" id="position" name="position" required>
                        @foreach (var position in positions)
                        {
                            <option value="@position">@position</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>

        <!-- Schedule Form -->
        <div class="col-md-6">
            <form method="post" action="/employees/@employeeID/schedule">
                <h3>Schedule Employee</h3>
                <div class="mb-3">
                    <label for="startTime" class="form-label">Start</label>
                    <input type="time" class="form-control" id="startTime" name="startTime" required />
                </div>
                <div class="mb-3">
                    <label for="endTime" class="form-label">End</label>
                    <input type="time" class="form-control" id="endTime" name="endTime" required />
                </div>
                <button type="submit" class="btn btn-primary">Schedule</button>
                <button type="button" class="btn btn-secondary ms-2" onclick="notifySchedule()">Notify Schedule</button>
            </form>

            <!-- Train Employee Form -->
            <form method="post" action="/employees/@employeeID/train" class="mt-4">
                <h3>Train Employee</h3>
                <div class="mb-3">
                    <label for="trainingModule" class="form-label">Training</label>
                    <select class="form-select" id="trainingModule" name="trainingModule" required>
                        @foreach (var module in trainingModules)
                        {
                            <option value="@module">@module</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Assign</button>
            </form>
        </div>
    </div>
</div>

<script>
    function notifySchedule() {
        fetch(`/employees/@employeeID/notify-schedule`, { method: 'POST' })
            .then(response => {
                if (response.ok) {
                    alert("Schedule notification sent.");
                } else {
                    alert("Failed to send schedule notification.");
                }
            });
    }
</script>